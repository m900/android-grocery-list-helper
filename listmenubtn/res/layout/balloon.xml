<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical"
        android:id="@+id/balloon_main_layout">

        <TableLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/balloon_inner_layout">
                <TableRow>
                        <ImageView android:src="@drawable/balloon_left_top" android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        <ImageView android:src="@drawable/balloon_top" android:scaleType="fitXY"
                                android:layout_width="fill_parent" android:layout_height="wrap_content" />
                        <ImageView android:src="@drawable/balloon_right_top" android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                </TableRow>
                <TableRow android:background="#FFFFFF" android:paddingTop="0dp">
                        <ImageView android:src="@drawable/balloon_left_middle" android:scaleType="fitXY"
                                android:layout_width="wrap_content" android:layout_height="fill_parent" />
                        <TextView android:layout_height="wrap_content" android:layout_width="wrap_content"
                                android:id="@+id/balloon_item_title" android:text="balloon_item_title" android:textSize="14dp"
                                android:textColor="#FF000000" android:paddingTop="0dp" android:paddingBottom="0dp"
                                android:paddingLeft="7dp" android:paddingRight="7dp" />
                        <ImageView android:src="@drawable/balloon_right_middle" android:scaleType="fitXY"
                                android:layout_width="wrap_content" android:layout_height="fill_parent" />
                </TableRow>
                <TableRow>
                        <ImageView android:src="@drawable/balloon_left_bottom" android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        <ImageView android:src="@drawable/balloon_bottom" android:layout_width="fill_parent"
                                android:layout_height="wrap_content" android:scaleType="fitXY" />
                        <ImageView android:src="@drawable/balloon_right_bottom" android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                </TableRow>
        </TableLayout>
        <ImageView android:src="@drawable/balloon_middle_pointer" android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="-8dp" />
</LinearLayout>
